<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Spot name:"
            android:fontFamily="monospace"
            android:id="@+id/parkingHistorySpotNameTextView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/parkingHistorySpotNameTextView"
            android:text="Name"
            android:fontFamily="monospace"
            android:layout_marginLeft="10dp"
            android:layout_margin="15dp"
            android:id="@+id/parkingHistorySpotName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Duration: "
            android:fontFamily="monospace"
            android:id="@+id/parkingHistoryAddressLineTextView"
            android:layout_below="@id/parkingHistorySpotNameTextView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/parkingHistoryAddressLineTextView"
            android:text="Locality"
            android:layout_marginLeft="10dp"
            android:layout_margin="15dp"
            android:fontFamily="monospace"
            android:id="@+id/parkingHistoryAddressLocalityTextView"
            android:layout_below="@id/parkingHistorySpotName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost:  "
            android:id="@+id/parkingHistoryVicinityTitle"
            android:fontFamily="monospace"
            android:layout_below="@id/parkingHistoryAddressLineTextView"
            android:layout_margin="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vicinity"
            android:fontFamily="monospace"
            android:layout_below="@id/parkingHistoryAddressLocalityTextView"
            android:layout_toRightOf="@id/parkingHistoryVicinityTitle"
            android:layout_margin="15dp"
            android:id="@+id/addressVicinityTextView"
            />





    </RelativeLayout>




</androidx.cardview.widget.CardView>